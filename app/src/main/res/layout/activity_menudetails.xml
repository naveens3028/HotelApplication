<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    tools:context=".ui.menuitems.MenuAddItemActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menu_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD MENU DETAILS"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_name"
        android:layout_gravity="right"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/menu_img_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_menu_camera"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="@string/fd_name"
        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/fdes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fname"
        android:hint="@string/fd_description"
        android:layout_margin="20dp"
       />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/fpric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/fdes"
        android:hint="@string/fd_price"
        android:layout_margin="20dp"
      />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:text="SAVE"
        android:textColor="@color/white"
        android:textStyle="bold"
        />


</androidx.appcompat.widget.LinearLayoutCompat>